@model Ecommerce.Models.Produto
@{
    ViewBag.Title = "DetalheProduto";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Detalhe do Produto</h2>

<table style="margin-left: 30px">
    <tr>
        <td colspan="2">
            <h4>@Model.Nome</h4>
        </td>
    </tr>
    <tr>
        <td style="width:400px">
            <img src="~/Images/@Model.Imagem" class="img-thumbnail" />
        </td>
        <td style="vertical-align: top; padding-left: 30px">
            <b>Descrição: </b>
            <br />
            @Model.Descricao<br />
            <b>Preço: </b>@Model.Preco.ToString("C2")<br />
            <b>Categoria: </b>@Model.Categoria.Nome<br />
            @Html.ActionLink("Adicionar", "AdicionarAoCarrinho", "Home", new { id = Model.ProdutoId }, new { @class = "btn btn-success" })
        </td>
    </tr>
</table>
