@using Ecommerce.Models
@model Categoria
@{
    ViewBag.Title = "AlterarCategoria";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div>
@using (Html.BeginForm("AlterarCategoria", "Categoria", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Alterar Categoria</legend>
        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoriaId)
        <div class="form-group">
            @Html.Label("Nome do produto", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome do produto"})
                @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Descrição do produto", new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Descrição do produto"})
                @Html.ValidationMessageFor(model => model.Descricao, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Salvar" class="btn btn-primary">
            </div>
        </div>
    </fieldset>
}
</div>


