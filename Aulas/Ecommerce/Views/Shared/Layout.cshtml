@using Ecommerce.Models
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
@{
    List<ItemVenda> listItemVenda = ViewBag.QtdCarrinho;

    int QtdItens = 0;
    

    if (listItemVenda != null)
    {
        foreach (ItemVenda item in listItemVenda)
        {
           QtdItens = QtdItens + item.Quantidade;
            
        }
    }
}
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Ecommerce - UP", "Index", "Home", null, new { @class = "navbar-brand" })
        @Html.ActionLink(Convert.ToString(QtdItens) + " Itens no carrinho", "CarrinhoCompras", "Home", null, new { @class = "navbar-brand  my-2 my-sm-0" })
    </nav>

    <div id="content" class="container" style="margin-top:30px">
        @RenderBody()
    </div>

    <hr style="margin-top:30px" />
    <footer style="text-align:center">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Hellen Martins</p>
    </footer>
</body>
</html>
